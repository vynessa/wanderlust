<p id="notice"><%= notice %></p>

<h1>Budget Items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_items.each do |budget_item| %>
      <tr>
        <td><%= budget_item.item %></td>
        <td><%= budget_item.description %></td>
        <td><%= budget_item.cost %></td>
        <td><%= link_to 'Show', trip_budget_item_path(@trip, budget_item) %></td>
        <td><%= link_to 'Edit', edit_trip_budget_item_path(@trip, budget_item) %></td>
        <td><%= link_to 'Destroy', trip_budget_item_path(@trip, budget_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget Item', new_trip_budget_item_path(@trip) %>
