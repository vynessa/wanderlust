<div class="page d-flex flex-column align-items-center">
  <div class="main">
    <a href="/"><h2 class="form-heading logo">Wanderlust</h2></a>
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "form-label login-email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email here…" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "form-label login-password" %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password here…" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "form-label remember-me" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Sign In", class: "sign-in button-pink" %>
        </div>
      <% end %>

      <p>Don't have an account? <%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>
